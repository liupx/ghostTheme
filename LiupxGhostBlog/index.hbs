{{!< default }}
        <main> 
	<!-- gsearch模板 -->  
	{{> "gsearch"}}
           {{!Cards}}
           {{#foreach posts}}
            <div class="row">
                <div class="card-front animated col s12 m12 l8 offset-l2">
                    <article class="card">
                        <div class="card-content">
                            <div class="card-header">
                                {{!post meta (time posted, tags)}}
                                <div class="card-meta blue-grey-text text-lighten-2">
                                    <div class="card-tag"> {{!Tag}}
                                        <i class="fa fa-hashtag" aria-hidden="true"></i>
                                        {{#foreach tags}}
                                            <a href="{{url}}" title="{{name}}" class="blue-grey-text text-lighten-2">{{name}}</a>
                                        {{/foreach}}
                                    </div>
                                    <time class="card-date" datetime="{{date format='YYYY-MM-DD'}}">
                                        <i class="fa fa-calendar" aria-hidden="true"></i> 
                                        {{date format='YYYY-MM-DD'}}
                                    </time>
                                </div>
                                {{!Post Title}}
                                <h2 class="card-title">
                                    <a href="{{url}}">{{title}}</a>
                                </h2>
                            </div>
                            {{!Post Content with limitation of 20 words}}
                            <p>{{excerpt words="20"}}&hellip;</p>
                        </div>
                        <div class="card-action">
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" class="btn-floating fb intent" data-width="580" height="235">
                                <i class="fa fa-facebook" aria-hidden="true" style="color: #fff;text-align: center;font-size:3rem;"></i>
                            </a>
                            <a href="https://twitter.com/intent/tweet?text={{encode title}} from www.liupx.me&amp;url={{url absolute="true"}}" class="btn-floating tw intent" data-width="550" height="235">
                                <i class="fa fa-twitter" aria-hidden="true" style="color: #fff;text-align: center;font-size:3rem;"></i>
                            </a>
                            <a href="http://service.weibo.com/share/share.php?url={{url absolute="true"}}&amp;title={{encode title}} 分享自:www.liupx.me" class="btn-floating gp intent" data-width="590" height="530">
                                <i class="fa fa-weibo" aria-hidden="true" style="color: #fff;text-align: center;font-size:3rem;"></i>
                            </a>
                            <a class="waves-effect waves-light btn right" href="{{url}}">查看全文</a>
                        </div>
                    </article>
                </div>
            </div>
            {{/foreach}}
            {{! Blog pagination }}
            {{#if pagination}}{{pagination}}{{/if}}
        </main>
        